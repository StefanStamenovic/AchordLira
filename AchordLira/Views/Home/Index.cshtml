@using AchordLira.Models.ViewModels;
@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-md-8">
        <div class="jumbotron" style="padding-top: 5px;">
            <h3>Popular songs:</h3>
            <div class="list-group">
                @foreach (ViewSong song in Model.popularSongs)
                {
                    <a href="#" class="list-group-item clearfix" style="padding-bottom: 0px;">
                        <div class="pull-left"><p class="text-info" style="margin-bottom: 0px;">@song.name</p></div>
                        <div class="pull-right" style="margin-bottom: 0px;">
                            <h5>@song.date</h5>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">New songs</div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (ViewSong song in Model.newSongs)
                    {
                        <a href="#" class="list-group-item">@song.name</a>
                    }
                </div>
            </div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">Requested songs<a class="btn btn-primary btn-lg pull-right" style="padding: 3px;" data-toggle="modal" href="#requestModal">Create request</a></div>
            <div class="panel-body">
                @foreach (ViewMessageRequest request in Model.songRequests)
                {
                    <div class="alert alert-dismissible alert" style="margin-bottom: 2px; padding-top: 2px; padding-bottom: 2px;">
                        <strong>@request.artist - @request.song</strong> requested by <strong>@request.author</strong> 
                        <hr style="margin-bottom: 10px; margin-top: 10px;"/>
                    </div>
                }
            </div>
        </div>
        <div class="modal" id="requestModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Create request</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Author</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputEmail" placeholder="Anonymous">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Artist</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputEmail" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Song</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="inputEmail" placeholder="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-10 col-lg-offset-2">
                                        <button type="submit" class="btn btn-primary pull-right">Create</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

