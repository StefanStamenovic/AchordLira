
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="jumbotron" style="padding-top: 0px;">
            @if (ViewBag.error != null)
            {
                <div class="col-lg-offset-3">
                    <div class="alert alert-dismissible alert-danger" style="width: 60%; margin-top: -74px;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>@ViewBag.error</strong>
                    </div>
                </div>
            }
            <form class="form-horizontal" action="/Song/Approve/" method="post" style="margin-top: 20px;">
                <fieldset>
                    <div class="form-group">
                        <input type="hidden" name="user" value="@ViewBag.draft.creator" />
                        <input type="hidden" name="approve" value="true" />
                        <div class="col-lg-10">
                            <input type="text" name="artist" class="form-control" id="artist" placeholder="" value="@ViewBag.draft.artist">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" name="name" class="form-control" id="name" placeholder="" value="@ViewBag.draft.name">
                        </div>
                    </div>
                    <hr />
                    <div class="col-lg-12">
                        <textarea class="form-control" name="content" rows="20" id="content" style="max-width: 100%;">@ViewBag.draft.content</textarea>
                        <hr />

                    </div>
                    <div class="form-group">
                        <div class="col-md-10 ">
                            <button type="submit" class="btn btn-primary" style="width: 50%;">Approve</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

