
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="jumbotron" style="padding-top: 0px;">
            @if (ViewBag.error != null)
            {
                <div class="col-lg-offset-3">
                    <div class="alert alert-dismissible alert-danger" style="width: 60%; margin-top: -74px;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>@ViewBag.error</strong>
                    </div>
                </div>
            }
            <form class="form-horizontal" action="/Song/CreateDraft/" method="post" style="margin-top: 20px;">
                <fieldset>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" name="artist" class="form-control" id="author" placeholder="Artist">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="text" name="song" class="form-control" id="artist" placeholder="Song">
                        </div>
                    </div>
                    <hr />
                    <div class="col-lg-12">
                        <textarea class="form-control" name="content" rows="12" id="content" style="max-width: 100%;"></textarea>
                        <hr />
                        <span class="help-block text-danger">Song must be approved by admin to appear.</span>

                    </div>
                    <div class="form-group">
                        <div class="col-md-10 ">
                            <button type="submit" class="btn btn-primary" style="width: 50%;">Create</button>
                        </div>
                    </div>
                </fieldset>
            </form>
            @if (ViewBag.error != null)
            {
                <div class="col-lg-offset-3">
                    <div class="alert alert-dismissible alert-danger" style="width: 60%; margin-top: -74px;">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>@ViewBag.error</strong>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

